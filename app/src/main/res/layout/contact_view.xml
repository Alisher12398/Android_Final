<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/contact_view_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/category1"
        android:scaleType="centerCrop"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/contact_view_name"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/contact_view_name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Text"
        android:layout_marginStart="20dp"

        app:layout_constraintStart_toEndOf="@id/contact_view_image"
        />

    <TextView
        android:id="@+id/contact_view_group"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:text="Group"

        app:layout_constraintStart_toEndOf="@id/contact_view_image"
        app:layout_constraintTop_toBottomOf="@id/contact_view_name"
        />


</android.support.constraint.ConstraintLayout>