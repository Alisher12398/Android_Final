<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAboutContact">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:background="@null"
        android:src="@drawable/baseline_arrow_back_white_36"/>

    <ImageView
        android:id="@+id/image_activity2"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:src="@drawable/category1"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/image_activity2"
        app:cardBackgroundColor="@color/colorSilver"
        app:cardCornerRadius="30dp"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/textview_name2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Name"
                android:textSize="20sp"
                android:textStyle="bold"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textview_mobile2"/>
            <TextView
                android:id="@+id/textview_mobile2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Mobile number"
                android:textSize="18sp"

                app:layout_constraintTop_toBottomOf="@id/textview_name2"
                app:layout_constraintBottom_toTopOf="@id/textview_home2"/>

            <TextView
                android:id="@+id/textview_home2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Home number"
                android:textSize="18sp"

                app:layout_constraintTop_toBottomOf="@id/textview_mobile2"
                app:layout_constraintBottom_toTopOf="@id/textview_work2"/>
            <TextView
                android:id="@+id/textview_work2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="Work number"
                android:textSize="18sp"

                app:layout_constraintTop_toBottomOf="@id/textview_home2"
                app:layout_constraintBottom_toTopOf="@id/textview_group2"/>

            <TextView
                android:id="@+id/textview_group2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="group number"
                android:textSize="18sp"

                app:layout_constraintTop_toBottomOf="@id/textview_work2"
                />



        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>